extends layout
block content
    .ui.teal.menu
        a.item(href='/')
            i.photo.icon
            span Galeria
        a.active.item(href='/admin/')
            i.settings.icon
            span Administração
    if editando
        h2.ui.header Editar foto
    else
        h2.ui.header Nova foto
    form.ui.form.segment.stacked(action='/save', method='POST', enctype='multipart/form-data')
        .field
            label Escolha uma foto do seu computador
            .ui.input
                input(type='file', name='arquivo')
        .field
            label Descrição
            .ui.input
                input(type='text', name='descricao')
        .ui.buttons
            a.small.ui.button(href='/admin/') Cancelar
            button.small.ui.teal.submit.button(type='submit') Salvar